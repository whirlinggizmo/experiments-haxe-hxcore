{
    "files.associations": {
        "*.nimble": "nimble"
    },
    "haxe.configurations": [
        [
          "hxml/vscode.hxml"
        ],
      
    ],
    "runOnSave.statusMessageTimeout": 3000,
    "runOnSave.commands": [
        {
            "command": "haxe",
            "args": [
                "--cwd", "${workspaceFolder}/examples/scripttest",
                "build.hxml"
            ],
            "clearOutput": true,
            "globMatch": "examples/scripttest/src/**/*.hx",
            "runningStatusMessage": "scripttest:building...",
            "finishedStatusMessage": "scripttest:complete",
            "runIn": "terminal"
        },
    ],
    "clangd.fallbackFlags": [
    "-I${workspaceFolder}/src/hxcore/flecs/flecs_wrapper/include",
    "-I/my/include"
]
}
